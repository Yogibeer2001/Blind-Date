<h1>Main Sessions Home Stage </h1>



<p> <% if current_user %>
    <div id="user-button">
      <h2>Welcome, <%= current_user.username %> (<%= current_user.age %>)</h2>
      <p>(<%=current_user.location%>)</p>
      <%= button_to "Edit My Profile", { :controller => 'users', :action => 'edit'}, method: :get %>
      <button><a href="/logout">Run away</a></button>
    </div>
      <% end %>
 </p>

<div class="preference"></div>
<h3>Meetup Preferences</h3>
<p>
  <strong>Age Range for meet up:</strong>
  <%= current_user.preference.min_age %> to <%= current_user.preference.max_age %>
</p>
<p>
  <strong>Preferred MeetUp Gender:</strong>
  <%= current_user.preference.gender %>
</p>
<p>
  <strong>Preferred MeetUp Location:</strong>
  <%= current_user.preference.location %>
</p>
<a href="/preferences/edit"><button type="button" name="button">Change Preferences of <%= current_user.username %></button></a></br></br></br>
</div>

<div class="user_stuff">
<%= match = User.where( "age > ? and age < ?", current_user.preference.min_age, current_user.preference.max_age).pluck(:username, :location).sample%>


</div>

<div id="map" style="width: 320px; height: 480px;"></div>
